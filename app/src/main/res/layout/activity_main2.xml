<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ciphercoindemo.com.ciphercoindemo.Main2Activity">


    <TextView
        android:id="@+id/tvSales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:textSize="18sp"
        android:text="Sale Details" />

    <TextView
        android:id="@+id/tvSaleDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvSales"
        android:layout_alignStart="@+id/tvSales"
        android:layout_below="@+id/tvSales"
        android:layout_marginTop="20dp"
        android:text="" />

    <TextView
        android:id="@+id/tvEarnings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvSaleDetails"
        android:layout_alignStart="@+id/tvSaleDetails"
        android:layout_below="@+id/tvSaleDetails"
        android:layout_marginTop="45dp"
        android:textSize="18sp"
        android:text="Earnings Details" />

    <TextView
        android:id="@+id/tvEarningsDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvEarnings"
        android:layout_alignStart="@+id/tvEarnings"
        android:layout_below="@+id/tvEarnings"
        android:layout_marginTop="20dp"
        android:text="" />
</RelativeLayout>
